<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/strackifyLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingHorizontal="@dimen/buttonPadding"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/baseline_sports_volleyball_black_48"
        android:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawablePadding="10dp"
        />
    <TextView
        android:id="@+id/changeFavoriteTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Favorite Team"
        android:textColor="@color/colorPrimaryDark"
        android:paddingHorizontal="@dimen/buttonPadding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawablePadding="10dp"
        android:layout_marginTop="200dp"
        />
    <TextView
        android:id="@+id/changeFavoriteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atletico"
        android:textColor="@color/colorPrimaryDark"
        android:paddingHorizontal="@dimen/buttonPadding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawablePadding="10dp"
        android:textSize="26dp"
        android:layout_marginTop="300dp"
        />
    <Button
        android:id="@+id/changeFavoriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Favorite Team"
        android:background="@drawable/custom_button"
        android:textColor="@color/white"
        android:paddingHorizontal="@dimen/buttonPadding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="420dp"
        android:drawableRight="@drawable/baseline_swap_horiz_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>