<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aboutTeam"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGrey"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/teamThumbAbout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:scaleType="fitXY" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teamThumbAbout"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"
            android:layout_marginTop="-10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"
                android:layout_marginVertical="@dimen/activity_vertical_spacing"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/teamNameAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/header_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/teamSportAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/teamCountryAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/teamStadiumAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/teamLeagueAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/teamGenderAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/formedYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventThumb"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"
        android:layout_marginVertical="@dimen/activity_vertical_spacing">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"
            android:layout_marginVertical="@dimen/activity_vertical_spacing"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Description"
                android:textColor="@color/textColor"
                android:textSize="@dimen/header_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teamDescriptionAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="@dimen/normal_text_size" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventThumb"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"
        android:layout_marginVertical="@dimen/activity_vertical_spacing">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"
                android:layout_marginVertical="@dimen/activity_vertical_spacing"
                android:text="Fan Art"
                android:textColor="@color/textColor"
                android:textSize="@dimen/header_text"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/fanArt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventThumb"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"
        android:layout_marginTop="-10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"
            android:layout_marginVertical="@dimen/activity_vertical_spacing"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"
                android:background="@drawable/fb" />

            <ImageView
                android:id="@+id/instagram"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"

                android:background="@drawable/instagram" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"

                android:background="@drawable/twitter" />

            <ImageView
                android:id="@+id/youtube"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"

                android:background="@drawable/youtube" />

            <ImageView
                android:id="@+id/website"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"
                android:background="@drawable/website" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/switchToFav"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"
        android:layout_marginTop="@dimen/activity_vertical_spacing"
        android:layout_marginBottom="75dp"
        android:background="@drawable/custom_button"
        android:padding="5dp"
        android:src="@drawable/baseline_swap_horiz_black_36"
        android:tint="@color/white" />

</LinearLayout>