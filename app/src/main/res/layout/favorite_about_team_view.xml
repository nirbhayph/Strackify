<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="@dimen/activity_horizontal_spacing"
    android:layout_marginTop="@dimen/activity_vertical_spacing"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/teamThumb"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/white"
        android:elevation="@dimen/team_elevation"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="@dimen/elevation_or_padding" />

    <TextView
        android:id="@+id/teamName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/custom_padding"
        android:textColor="@color/textColor"
        android:textSize="@dimen/normal_text_size" />
</LinearLayout>