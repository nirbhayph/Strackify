<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sportstracking.strackify">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/baseline_sports_volleyball_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/baseline_sports_volleyball_24"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".authentication.SignInActivity"/>
        <activity android:name=".MainActivity"/>
        <activity
            android:name=".SportSelection"
            android:theme="@style/FullScreenAppTheme"/>
        <activity
            android:name=".CountrySelection"
            android:parentActivityName=".SportSelection"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>